<h1>EAT DA BURGER</h1>
<ul>
  {{#each burgers}}
    <li>
      <p>
        {{this.id}}. {{this.burger}}
        <button data-burgerid="{{this.id}}" class="delburger">Delete</button>
      </p>
    </li>
  {{/each}}
</ul>

<h2>Add Burger</h2>
<form id="addburger" class="button-size">
	<textarea type="text" name="burger"></textarea>
	<button type="submit">Save The Burger</button>
</form>

<h2>Update Burger</h2>
<form id="updateburger" class="button-size">
  <input type="text" name="id" placeholder="id">
	<textarea type="text" name="burger" placeholder="Do you want to make a change to this burger?"></textarea>
	<button type="submit">Update Burger</button>
</form>